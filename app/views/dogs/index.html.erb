<h2>Dogs</h2>

  <% if params[:sort] == "true"%>
    <%= link_to "Sort by least of Employees ⬇", "#{dogs_path}?sort=false" %>
    <% @dogs = @dogs.sort_by{|dog| dog.employees.count} %>
  <% else %>
    <%= link_to "Sort by most of Employees ⬆", "#{dogs_path}?sort=true" %>
    <% @dogs = @dogs.sort_by{|dog| dog.employees.count}.reverse %>
  <% end %>

<% @dogs.each do |dog| %>
    <ul>
        <li>
            <%= link_to dog.name, dog %> has <%= dog.employees.count%> employees
        </li>
    </ul>
<% end %>